#!/bin/sh

genindex() { # 1: input
echo "<ul>"
recfmt '
<li>
<b>{{Date}}</b>:
<a href="{{File}}">{{Name}}</a>
{{Extra}}
</li>
' < "$1"
echo "</ul>"
}

genrss() { # 1: input 2: title 3: url 4: description
cat <<EOF
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
<channel>
<title>$2</title>
<link>$3</link>
<description>$4</description>
EOF
recfmt '
<item>
<title>{{Name}}</title>
<link>{{File}}</link>
<guid>{{File}}</guid>
<pubDate>{{Date}}</pubDate>
<description><![CDATA[
<a href="{{File}}">{{Name}}</a>
{{Extra}}
]]></description>
</item>
' < "$1"
cat <<EOF
</channel>
</rss>
EOF
}

wraphtml() { # 1: <input> 2: -t <template> (default `template.html`)
while getopts t:R: arg; do
	case $arg in
		t) template=$OPTARG;;
		R) regex=$OPTARG;;
		\?|*) exit 1;;
	esac
done
shift $(expr $OPTIND - 1)

sed "/${regex:-^\s*<!--WRAPHTML-->$}/r ${1:-/dev/stdin}" "${template:-template.html}"
}

dirindex() {
for path do
	find "$path" -type f -printf '<li><a href="%p">%p</a></li>\n'
done
}

markdown2html() {
pandoc -f gfm -t html "${1:--}"
}
